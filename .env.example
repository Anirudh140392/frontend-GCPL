# Frontend Unified - Environment Configuration

# ==============================================
# CLIENT CONFIGURATION
# ==============================================

# Default client to load (gcpl, samsonite, bowlers, bunge)
VITE_CLIENT=gcpl

# ==============================================
# API CONFIGURATION
# ==============================================

# Base API URL
VITE_API_BASE_URL=https://react-api-script.onrender.com

# API timeout in milliseconds
VITE_API_TIMEOUT=30000

# API retry attempts
VITE_API_RETRY_ATTEMPTS=3

# API retry delay in milliseconds
VITE_API_RETRY_DELAY=1000

# ==============================================
# CACHING CONFIGURATION
# ==============================================

# Enable/disable API response caching
VITE_ENABLE_CACHE=true

# Cache timeout in milliseconds (5 minutes)
VITE_CACHE_TIMEOUT=300000

# ==============================================
# FEATURE FLAGS
# ==============================================

# Enable debug mode
VITE_DEBUG_MODE=false

# Enable console logging
VITE_ENABLE_LOGGING=true

# Enable performance monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=false

# Enable error tracking
VITE_ENABLE_ERROR_TRACKING=true

# ==============================================
# UI CONFIGURATION
# ==============================================

# Default theme mode (light, dark, auto)
VITE_DEFAULT_THEME_MODE=light

# Enable theme switching
VITE_ENABLE_THEME_SWITCHING=true

# Default date range in days
VITE_DEFAULT_DATE_RANGE=30

# Maximum date range in days
VITE_MAX_DATE_RANGE=365

# Auto refresh interval in milliseconds (5 minutes)
VITE_AUTO_REFRESH_INTERVAL=300000

# ==============================================
# DEVELOPMENT CONFIGURATION
# ==============================================

# Development server port
VITE_DEV_PORT=3000

# Enable hot module replacement
VITE_HMR=true

# Enable source maps in production
VITE_PROD_SOURCE_MAPS=false

# ==============================================
# ANALYTICS & MONITORING
# ==============================================

# Google Analytics ID (optional)
VITE_GA_ID=

# Sentry DSN for error tracking (optional)
VITE_SENTRY_DSN=

# Application version
VITE_APP_VERSION=1.0.0

# Build timestamp (automatically set during build)
VITE_BUILD_TIMESTAMP=

# ==============================================
# CLIENT-SPECIFIC OVERRIDES
# ==============================================

# GCPL specific settings
VITE_GCPL_DEFAULT_BRAND=Cinthol Grocery
VITE_GCPL_DEFAULT_PLATFORM=Flipkart

# Samsonite specific settings
VITE_SAMSONITE_DEFAULT_BRAND=Samsonite
VITE_SAMSONITE_DEFAULT_PLATFORM=Flipkart

# Bowlers specific settings
VITE_BOWLERS_DEFAULT_BRAND=Bowlers
VITE_BOWLERS_DEFAULT_PLATFORM=Flipkart

# Bunge specific settings
VITE_BUNGE_DEFAULT_BRAND=Bunge
VITE_BUNGE_DEFAULT_PLATFORM=Flipkart

# ==============================================
# SECURITY CONFIGURATION
# ==============================================

# Enable HTTPS in development
VITE_HTTPS=false

# CORS settings
VITE_CORS_ENABLED=true

# Content Security Policy
VITE_CSP_ENABLED=false

# ==============================================
# DEPLOYMENT CONFIGURATION
# ==============================================

# Base path for deployment (useful for subdirectory deployments)
VITE_BASE_PATH=/

# Public URL for assets
VITE_PUBLIC_URL=

# CDN URL for static assets (optional)
VITE_CDN_URL=

# ==============================================
# EXPERIMENTAL FEATURES
# ==============================================

# Enable experimental features
VITE_ENABLE_EXPERIMENTAL=false

# Enable service worker
VITE_ENABLE_SERVICE_WORKER=false

# Enable offline mode
VITE_ENABLE_OFFLINE_MODE=false
